<div class="row">
  <div class="col-md-12">
    <%= link_to 'New user', new_user_invitation_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>


<% if @users.any? %>
<br>
<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover act-table">
        <thead>
          <th>Username</th>
          <th>Role</th>
          <th>Registered since</th>
        </thead>
        <tbody>
        <% for @user in @users %>
        <tr>
          <td><%= @user.email %></td>
          <td><%= @user.role_label %></td>
          <td><%= @user.created_at %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% else %>

<div class="well text-center">
  <h5>There are no users yet. <%= link_to 'Create one', new_user_invitation_path %>.</h5>
</div>

<% end %>
