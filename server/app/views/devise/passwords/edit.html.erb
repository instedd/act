<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4">
    <div id="act-login" class="well">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <legend>Change your password</legend>
          
          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "New password"  %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation"  %>
          </div>
        </div>
        
        <%= f.submit "Change password", class: "btn btn-primary" %>
        <%= devise_error_messages! %>
      <% end %>
    </div>
  </div>
</div>